<section class="user-profile">
  <div class="user-card">
    <img src=<%=@user.photo%> alt="user-profile" />
    <div class="card-info">
      <h2><%=@user.name%></h2>
      <p>Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>
  <div class="user-posts-container">
    <% @posts.each_with_index do |post, index| %>
      <div class="user-post">
        <%= link_to user_post_path(@user, post) do %>
          <div class="post-card">
            <h3>Post #<%=index+1%>: <%=post.title%></h3>
            <p>
              <%= post.text.slice(0, 200)... %>
            </p>
            <h4>Comments: <%=post.comments_counter%>, Likes: <%=post.likes_counter%></h4>
          </div>
        <% end %> 
        <div class="comments-container">
          <%if post.comments.empty? %>
            <p>No comments found!</p>
          <% else %>
            <% post.recent_comments.each do |comment| %>
              <p><%=@user.name%>: <%=comment.text%></p>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
    <button class="pagination">Pagination Placeholder</button>
  </div>
</section>
