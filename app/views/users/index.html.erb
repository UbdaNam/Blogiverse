<section class="list-container">
  <h1>Users</h1>
  <div>
    <a href="/users/21/posts/new"> Create Post </a>
  </div>
  <% @users.each do |user| %>
    <%= link_to user_path(user) do %>
      <div class="user-card">
        <img src=<%=user.photo%> alt="user-profile" />
        <div class="card-info">
          <h2><%=user.name%></h2>
          <p>Number of posts: <%= user.posts_counter %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</section>

