<section class="user-profile">
  <h1>User Profile</h1>
  <%= render 'user_card', user: @user %>
  <div class="profile-bio">
    <h3>Bio</h3>
    <p><%= @user.bio.slice(0, 200)... %></p>
  </div>
  <div class="post-card-container">
    <% @user.recent_three.each_with_index do |post, index| %> 
        <%= link_to user_post_path(@user, post) do %>
          <div class="post-card">
            <h3>Post #<%=index + 1%></h3>
            <p><%= post.text.slice(0, 200)... %></p>
            <h4>
              Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %>
            </h4>
          </div>
      <% end %> 
    <% end %>
  </div>
    <%= link_to user_posts_path(@user) do %>
      <button class="see-all-btn">See all posts</button>
  <%end %>
</section>