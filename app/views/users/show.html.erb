<section class="user-profile">
  <h1>User Profile</h1>
  <div class="user-card">
  <img src=<%=@user.photo%> alt="user-profile" />
  <div class="card-info">
      <h2><%=@user.name%></h2>
      <p>Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>
  <div class="profile-bio">
    <h3>Bio</h3>
    <p><%= @user.bio.slice(0, 200)... %></p>
  </div>
  <div class="post-card-container">
    <% @user.posts.each_with_index do |post, index| %> 
      <%if (index < 3) %>
        <%= link_to user_post_path(@user, post) do %>
          <div class="post-card">
            <h3>Post #<%=index + 1%></h3>
            <p><%= post.text.slice(0, 200)... %></p>
            <h4>
              Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %>
            </h4>
          </div>
        <% end %>
      <% end %> 
    <% end %>
  </div>
  <%if (@user.posts_counter > 3) %>
    <%= link_to user_posts_path(@user) do %>
      <button class="see-all-btn">See all posts</button>
    <% end %>
  <%end %>
</section>